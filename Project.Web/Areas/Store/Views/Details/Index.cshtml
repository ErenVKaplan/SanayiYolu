@model StoreDetailsViewModel

@section Styles {
    <link href="~/sneat/assets/vendor/libs/flatpickr/flatpickr.css" rel="stylesheet" />
 }
@section Scripts {
    <script src="~/sneat/assets/vendor/libs/flatpickr/flatpickr.js"></script>
     <script>
        flatpickr("#flatpickr-time-opening", {
                enableTime: true,
                noCalendar: true,
                dateFormat: "H:i",
                time_24hr: true
        });
        flatpickr("#flatpickr-time-closing", {
            enableTime: true,
            noCalendar: true,
            dateFormat: "H:i",
            time_24hr: true
        });
     </script>
 }

<h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">Mağaza Yönetimi /</span> Mağaza Bilgileri
</h4>

<div class="d-flex justify-content-center">
    <div class="col-md-8">
        <div class="card mb-4">
            <h5 class="card-header">Create Product</h5>
            <div class="card-body demo-vertical-spacing">
                <form asp-area="Store" asp-controller="Details" asp-action="Index" method="post">

                    <input asp-for="Id" hidden />
                    <input asp-for="UserId" hidden />

                    <div class="row mb-4">
                        <label class="form-label"> Mağaza Aktifliği: <strong>@Model.OnAir</strong> </label>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label class="form-label">Mağaza İsim</label>
                            <div class="form-group mb-5">
                                <input type="text" asp-for="StoreName" class="form-control" required>
                                <span class="text-danger"></span>
                            </div>

                            <label class="form-label">Mağaza Slogan</label>
                            <div class="form-group mb-5">
                                <input type="text" asp-for="StoreSlogan" class="form-control" required>
                                <span class="text-danger"></span>
                            </div>

                            <label class="form-label">Çalışan Sayısı</label>
                            <div class="form-group mb-5">
                                <input type="number" asp-for="CrewSize" class="form-control" required>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <label class="form-label">Mağaza Açıklaması</label>
                            <div class="form-group mb-4">
                                <textarea rows="7" type="text" asp-for="StoreDescription" class="form-control" required></textarea>
                                <span class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <label class="form-label">Açılış</label>
                                    <input type="text" asp-for="OpeningTime" class="form-control flatpickr-input active" placeholder="HH:MM" id="flatpickr-time-opening" readonly="readonly" required>

                                </div>
                                <div class="col">
                                    <label class="form-label">Kapanış</label>
                                    <input type="text" asp-for="ClosingTime" class="form-control flatpickr-input active" placeholder="HH:MM" id="flatpickr-time-closing" readonly="readonly" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label class="form-label">Ülke</label>
                            <div class="form-group mb-5">
                                <input type="text" class="form-control" value="@Model.Address.Country.CountryName" readonly>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <label class="form-label">Şehir</label>
                            <div class="form-group mb-5">
                                <input type="text" class="form-control" value="@Model.Address.City.CityName" readonly>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <label class="form-label">İlçe</label>
                            <div class="form-group mb-5">
                                <input type="text" class="form-control" value="@Model.Address.District.DistrictName" readonly>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button class="btn btn-outline-primary" type="submit" id="button-addon2">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>