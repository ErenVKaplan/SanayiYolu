@model List<FavouriteStore>

<div class="amazing-deals">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading text-center">
                    <h1>Favori Dükkanlarım</h1>
                </div>
            </div>

            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-sm-6">
                    <div class="item">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="image">
                                    <img src="~/images/@item.Store.Images.First().Image.FileName" alt="">
                                </div>
                            </div>
                            <div class="col-lg-6 align-self-center">
                                <div class="content">
                                    <span class="info">@item.Store.Address.City.CityName Sanayi Sitesi</span>
                                    <h4>@item.Store.StoreName</h4>
                                    <div class="row">
                                        <div class="col-6">
                                            <i class="fa fa-clock"></i>
                                            <span class="list">@item.Store.OpeningTime - @item.Store.ClosingTime</span>
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-map"></i>
                                            <span class="list">@item.Store.Address.City.CityName</span>
                                        </div>
                                    </div>
                                    <p>@item.Store.StoreSlogan</p>
                                    <div class="main-button">
                                        <a href="storeinfo.html">Mağaza Sayfası</a>
                                        <a asp-area="" asp-controller="Account" asp-action="ToggleFavourites" asp-route-StoreId="@item.StoreId" class="favorite-link">
                                            <i class="fa-solid fa-star fa-beat" style="color: #e3c635;"></i>
                                            Favoriden Çıkar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @* <div class="col-lg-12">
                <ul class="page-numbers">
                    <li><a href="#"><i class="fa fa-arrow-left"></i></a></li>
                    <li><a href="#">1</a></li>
                    <li class="active"><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#"><i class="fa fa-arrow-right"></i></a></li>
                </ul>
            </div> *@
        </div>
    </div>
</div>