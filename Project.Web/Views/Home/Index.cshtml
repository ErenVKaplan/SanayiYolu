
@model List<Store>

<!-- ***** Main Banner Area Start ***** -->
<section id="section-1">
    <div class="content-slider">

        @for (int i = 0; i < Model.Count(); i++)
        {
            if (i == 0)
            {
                <input type="radio" id="banner@(i+1)" class="sec-1-input" name="banner" checked>            
            }
            else
            {
                <input type="radio" id="banner@(i+1)" class="sec-1-input" name="banner">
            }

            if (i == 5)
                break;
        }

        <div class="slider">

            @for (int i = 0; i < Model.Count(); i++)
            {
                <div id="top-banner-@(i+1)" class="banner">
                    <div class="banner-inner-wrapper header-text">
                        <div class="main-caption">
                            <h2>Sanayide uğramanız gereken dükkanlar:</h2>
                            <h1>@Model.ElementAt(i).StoreName</h1>
                            <div class="border-button">
                                <a asp-area="" asp-controller="Home" asp-action="Store" asp-route-Id="@Model.ElementAt(i).Id">Dükkan Sayfası</a>
                            </div>
                        </div>
                    </div>
                </div>

                if (i == 5)
                    break;
            }
            <!-- SearchForm -->
            <div class="search-form">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <form asp-area="" asp-controller="Home" asp-action="Stores" id="search-form" name="gs" method="submit" role="search">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <h4>Aradığınız:</h4>
                                    </div>
                                    <div class="col-lg-6">
                                        <fieldset>
                                            <select asp-items="@(new SelectList(ViewBag.Cities, "Id", "CityName"))" required name="Location" class="form-select" aria-label="Default select example" id="chooseLocation">
                                                <option value="">Şehir Seçiniz</option>
                                            </select>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-2">
                                        <fieldset>
                                            <button type="submit" class="border-button">Dükkanlar</button>
                                        </fieldset>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /SearchForm -->
        </div>
        <nav>
            <div class="controls">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <label for="banner@(i+1)"><span class="progressbar"><span class="progressbar-fill"></span></span><span class="text">@(i+1)</span></label>

                    if (i == 5)
                        break;
                }
            </div>
        </nav>
    </div>

</section>
<!-- ***** Main Banner Area End ***** -->

<div class="visit-country">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="section-heading">
                    <h1>En İyi Dükkanlar</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="items">
                    <div class="row">

                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-12">
                                    <div class="item">
                                        <div class="row">
                                            <div class="col-lg-4 col-sm-5">
                                                <div class="image">
                                                    <img src="~/site/assets/images/YılmazOtoBakım.jpg" alt="">
                                                </div>
                                            </div>
                                            <div class="col-lg-8 col-sm-7">
                                                <div class="right-content">
                                                    <h4>@item.StoreName</h4>
                                                    <span>@item.Address.City.CityName Sanayi Sitesi</span>
                                                    <div class="main-button">
                                                        <a asp-area="" asp-controller="Home" asp-action="Store" asp-route-Id="@item.Id">Dükkan Sayfası</a>
                                                    </div>
                                                    <p>@item.StoreSlogan</p>
                                                    <ul class="info">
                                                        <li><i class="fa fa-user"></i>@item.CrewSize Kişilik Ekip</li>
                                                        <li><i class="fa fa-globe"></i>@item.Address.City.CityName</li>
                                                        <li>
                                                            <a asp-area="" asp-controller="Account" asp-action="ToggleFavourites" asp-route-StoreId="@item.Id" class="favorite-link">
                                                                <i class="fa-solid fa-star fa-beat" style="color: #e3c635;"></i>
                                                                Favoriye Ekle
                                                            </a>
                                                        </li>
                                                    </ul>
                                                    <div class="text-button">
                                                        <a asp-area="" asp-controller="Home" asp-action="Stores">Diğer Dükkanlar <i class="fa fa-arrow-right"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        @* <div class="col-lg-12">
                            <ul class="page-numbers">
                                <li><a href="#"><i class="fa fa-arrow-left"></i></a></li>
                                <li><a href="#">1</a></li>
                                <li class="active"><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#"><i class="fa fa-arrow-right"></i></a></li>
                            </ul>
                        </div> 
                        *@
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="side-bar-map">
                    <div class="row">
                        <div class="col-lg-12">
                            <div id="map">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12469.776493332698!2d-80.14036379941481!3d25.907788681148624!2m3!1f357.26927939317244!2f20.870722720054623!3f0!3m2!1i1024!2i768!4f35!3m3!1m2!1s0x88d9add4b4ac788f%3A0xe77469d09480fcdb!2sSunny%20Isles%20Beach!5e1!3m2!1sen!2sth!4v1642869952544!5m2!1sen!2sth" width="100%" height="550px" frameborder="0" style="border:0; border-radius: 23px; " allowfullscreen=""></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2>Sanayide güvenilir dükkan mı arıyorsun?</h2>
                <h4>SanayiYolu seninle</h4>
            </div>
            <div class="col-lg-4">
                <div class="border-button">
                    <a href="stores.html">Dükkanlar</a>
                </div>
            </div>
        </div>
    </div>
</div>
