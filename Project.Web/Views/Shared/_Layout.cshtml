
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>Sanayi Yolum</title>

    <!-- Bootstrap core CSS -->
    <link href="~/site/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Slick Carousel Css -->
    <link rel="stylesheet" href="~/site/assets/css/foundation-float.min.css" />
    <link rel="stylesheet" href="~/site/assets/css/slick-theme.css" />
    <link rel="stylesheet" href="~/site/assets/scss/_bootstrap-extended/slickslider.scss" />
    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/site/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/site/assets/css/templatemo-woox-travel.css">
    <link rel="stylesheet" href="~/site/assets/css/owl.css">
    <link rel="stylesheet" href="~/site/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <!--

    TemplateMo 580 Woox Travel

    https://templatemo.com/tm-580-woox-travel

    -->
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->

    
    <!-- ***** Header Area Start ***** -->
    <partial name="~/PartialViews/_HomeHeaderPartialView.cshtml">
    <!-- ***** Header Area End ***** -->

    @RenderBody()

    <!-- ***** Footer Area Start ***** -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright © 2024 <a href="#">site</a> Company. All rights reserved.
                </div>
            </div>
        </div>
    </footer>
    <!-- ***** Footer Area End  ***** -->

    <!-- Scripts -->
    <!-- Slick Carousel -->
    <script src="~/site/assets/js/jquery.min.js"></script>
    <script src="~/site/assets/js/slick.js"></script>
    <script src="~/site/assets/js/slickslider.js"></script>
    <!-- / Slick Carousel -->
    <!-- Bootstrap core JavaScript -->
    <!-- <script src="vendor/jquery/jquery.min.js"></script> -->
    <script src="~/site/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/site/assets/js/isotope.min.js"></script>
    <script src="~/site/assets/js/owl-carousel.js"></script>
    <script src="~/site/assets/js/wow.js"></script>
    <script src="~/site/assets/js/tabs.js"></script>
    <script src="~/site/assets/js/popup.js"></script>
    <script src="~/site/assets/js/custom.js"></script>

    <script>
        function bannerSwitcher() {
            next = $('.sec-1-input').filter(':checked').next('.sec-1-input');
            if (next.length) next.prop('checked', true);
            else $('.sec-1-input').first().prop('checked', true);
        }

        var bannerTimer = setInterval(bannerSwitcher, 5000);

        $('nav .controls label').click(function () {
            clearInterval(bannerTimer);
            bannerTimer = setInterval(bannerSwitcher, 5000)
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
        @await Component.InvokeAsync("NToastNotify")
</body>
</html>







